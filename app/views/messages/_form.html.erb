<%= form_for @message, :html => { :class => 'form-horizontal new-message' } do |f| %>
  <%= f.text_area :content, :class => 'text_area span6', :rows => 3, :placeholder => 'Say something' %>
  <%= f.text_field :tags, :class => 'text_field span6', :placeholder => 'tags' %><br/>

  <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>